@model AppMVC.Models.Sort

@{
    ViewData["Title"] = "History";
}

<h1 class="text-center">History</h1>

<hr/>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="History">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Sort by date:</label>
                <input asp-for="Date" class="form-control" type="date"/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Sort</button>
            </div>
        </form>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8 mt-4">
        <table class="table table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Changed Date</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewData["productAudits"] is not null)
                {
                    foreach (var item in (List<ProductAudit>)ViewData["productAudits"])
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price</td>
                            <td>@item.ChangedDate</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No history found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-6 text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to Products</a>
    </div>
</div>
